[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  co = checkout
  b = branch
  personalprofile = config user.email \"<%= print("Your Personal Email: "); STDOUT.flush; STDIN.gets.chomp %>\"
  bitbuckerprofile = config user.email \"<%= print("Your Bitbucket Email: "); STDOUT.flush; STDIN.gets.chomp %>\"
  unlock = crypt unlock ~/.git-crypt-key
[color]
  ui = true
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = vim
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[hub]
  host = <%= print("Hub hostname: "); STDOUT.flush; STDIN.gets.chomp %>
[push]
  default = simple
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[tig]
  tab-size = 4
  line-graphics = utf-8
  vertical-split = auto
